<?xml version="1.0"?>
<ruleset name="PHP Utils Coding Standard">
    <description>PSR-12 coding standard for PHP Utils library</description>
    
    <!-- Include PSR-12 coding standard -->
    <rule ref="PSR12"/>
    
    <!-- Scan these directories -->
    <file>src/</file>
    
    <!-- Exclude test files -->
    <exclude-pattern>*/Tests/*</exclude-pattern>
    
    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Use colors in output -->
    <arg name="colors"/>
    
    <!-- Show sniff codes in all reports -->
    <arg value="s"/>
    
    <!-- Additional PSR-12 related rules -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="120"/>
        </properties>
    </rule>
    
    <!-- Ensure arrays use short syntax -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
</ruleset>